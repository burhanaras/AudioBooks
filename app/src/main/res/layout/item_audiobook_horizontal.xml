<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:context=".presentation.ui.home.banner.BannerItemFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:id="@+id/ivAudioBookHorizontalImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_play" />

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tvAudioBookHorizontalName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="200dp"
            android:text="TextView"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

    <TextView
            android:id="@+id/tvAudioBookHorizontalAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Author"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvAudioBookHorizontalName"
            app:layout_constraintTop_toBottomOf="@+id/tvAudioBookHorizontalName" />

    <TextView
            android:id="@+id/tvAudioBookHorizontalDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lines="4"
            android:scrollHorizontally="false"
            android:text="TextView SDSAD ASD ASA  sd fsdfds sdff sdffs sdffdsfh dsads sdds sadds sad assa Assa asAS A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/tvAudioBookHorizontalAuthor" />


</androidx.constraintlayout.widget.ConstraintLayout>